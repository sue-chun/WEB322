
<div class="table-responsiev">
    <div class="col-md-12">
        <h2>Departments<a href="/departments/add" class="btn btn-success pull-right">Add New Department</a></h2>
          <hr />
        <table class="table"> 
            <thead>
                <tr>
                    <th>Department Number</th>
                    <th>Department Name</th>
                    <th> </th>
                </tr>
            </thead>
            {{#each department}}
            <tbody>
                <tr>
                    <td><a href="/employees?department={{departmentId}}">{{departmentId}}</a></td>
                    <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
                    <td><a href="/departments/delete/{{departmentId}}" class="btn btn-danger">remove</a></td>

                </tr>
            </tbody>
            {{/each}}
        </table>
        {{#unless department}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>
