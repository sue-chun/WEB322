<div class="table-responsiev">
    <div class="col-md-12">
          <h2>departments</h2>
          <hr />
        <table class="table"> 
            <thead>
                <tr>
                    <th>Department Number</th>
                    <th>Department Name</th>
                </tr>
            </thead>
            {{#each departments}}
            <tbody>
                <tr>
                    <td><a href="/employees?department={{departmentId}}">{{departmentId}}</a></td>
                    <td><a href="/employees?department={{departmentName}}">{{departmentName}}</a></td>
                </tr>
            </tbody>
            {{/each}}
            {{#unless departments }}
            <p>{{message}}</p>
            {{/unless}}
        </table>
    </div>
</div>
