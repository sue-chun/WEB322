

    <div class="container">
      <div class="row">
    <div class="col-md-12">
        {{#with department}}
        <h1>{{departmentName}} - Department: {{departmentId}} </h1>
        <hr />
        <form method="post" action="/departments/update">
            <input type="hidden" name="departmentId" value={{departmentId}} />
            <fieldset>
                <legend> </legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="departmentName">Department Name</label>
                            <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{departmentName}}" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
        </form>
    {{/with}}
    </div>
</div>
    </div>
